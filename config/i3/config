set $green     ${color2}
set $yellow    ${color3}
set $blue      ${color4}
set $magenta   ${color5}
set $cyan      ${color6}
set $white     ${color7}

set $brblack   ${color8}
set $brred     ${color9}
set $brgreen   ${color10}
set $bryellow  ${color11}
set $brblue    ${color12}
set $brmagenta ${color13}
set $brcyan    ${color14}
set $brwhite   ${color15}

set $base00 ${color0}
set $base01 ${color1}
set $base02 ${color2}
set $base03 ${color3}
